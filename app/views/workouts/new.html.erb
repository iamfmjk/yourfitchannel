<div class="col-12 mx-auto mt-1">
<h1 class="text-center">Schedule a workout</h1>
<div class="col-sm-8 col-md-6 mx-auto card mt-3 py-3">
  <%= simple_form_for @workout, url: user_video_workouts_path do |f| %>
    <%= f.input :title, input_html: { value: @selected_video.title } %>
    <%= f.input :scheduled_for,
      order: [:month, :day, :year],
      default: DateTime.current.advance(:minutes => +5),
      html5: true %>
    <%= f.submit 'Schedule', class: "btn btn-outline-info float-right" %>
  <% end %>
</div>
</div>
